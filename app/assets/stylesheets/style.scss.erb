body, html {
  font-family: 'Cabin', sans-serif;
  text-rendering: optimizeLegibility !important;
  -webkit-font-smoothing: antialiased !important;
  color: #383838;
  background-color: #fff;
  line-height: 30px;
}
h1 {
  line-height: 75px;
}
h1 strong {
  font-weight: 900;
}
h2 {
  line-height: 45px;
  margin: 0;
}
h3 {
  font-size: 20px;
  font-weight: 500;
  text-transform: none;
  line-height: 30px;
}
h4 {
  margin-top: 20px;
  font-size: 16px;
  text-transform: none;
  font-weight: 300;
}
h5 {
  text-transform: none;
  font-weight: 700;
}
p {
  font-size: 20px;
}

.btn, .buy-button, .btn-learn-more {
  background: #ed3e44;
  border: 1px solid #fff;
  border-radius: 9px;
  padding: 10px 20px;
  margin-top: 20px;
  margin-left: 0;
  font-size: 18px;
  color: #fff;
}


.buy-button:hover, .buy-button:focus, .btn-learn-more:hover, .btn-learn-more:focus .btn:hover, .btn:focus {
  background: #ed3e44;
  font-size: 20px;
  color: #fff;
}

.btn-donate {
  color: #383838;
  background-color: transparent;
  border: 1px solid #fff;
  margin: 0 8px;
  font-size: 16px;
  text-transform: uppercase;
  letter-spacing: 1px;
  border-radius: 0;
}

.btn-donate:hover, .btn-donate:focus, {
  color: #383838;
  font-size: 20px;
}


.btn:active {
  background-image: none;
  outline: 0;
  -webkit-box-shadow: none;
  box-shadow: none;
}


a:focus {
  outline: none;
  outline-offset: none;
}

.book-image {
  margin-top: 30px;
  margin-bottom: 30px;
}

.moon-home {
  margin-top: 80px;
  margin-left: 30px;
  margin-bottom: 30px;
}
.about-text p  {
  font-size: 20px;
}

a {
  font-size: 12px;
  color: #383838;
}

a:hover, a:focus {
  background-color: transparent;
  text-decoration: none;
  font-weight: 900;
  font-size: 14px
}
span {
  text-transform: none;
}
.clearfix:after {
  visibility: hidden;
  display: block;
  font-size: 0;
  content: " ";
  clear: both;
  height: 0;
}
.clearfix {
  display: inline-block;
}
* html .clearfix {
  height: 1%;
}
.clearfix {
  display: block;
}
ul, ol {
  padding: 0;
  webkit-padding: 0;
  moz-padding: 0;
  list-style: none;
}
.img-centered {
  margin: 0 auto;
}
/* Navigation */
#menu {
  padding: 20px;
  transition: all 0.5s;
}
#menu.navbar-default {
  background-color: rgba(255, 255, 255,0.5);
  border-color: rgba(231, 231, 231, 0);
}
#menu a.navbar-brand {
  color: #383838;
  font-size: 16px;
  font-weight: 600;
  background-image: url("<%= asset_path('logo-icon.png') %>");
  background-position: left center;
  background-repeat: no-repeat;
  padding-left: 15px;
}

#menu.navbar-default .navbar-nav > li > a {
  text-transform: uppercase;
  font-size: 15px;
  letter-spacing: 2px;
  font-weight: 900;
  color: #383838;
}
#menu.navbar-default .navbar-nav > li > a:hover {
  color: #383838;
}

.inline {
  display: inline-block;
}
.on {
  background-color: #fff !important;
  padding: 0 !important;
}

.navbar-default .navbar-nav > .active > a, .navbar-default .navbar-nav > .active > a:hover, .navbar-default .navbar-nav > .active > a:focus {
  background-color: transparent;
}
.navbar-toggle {
  border-radius: 0;
}
.navbar-default .navbar-toggle:hover, .navbar-default .navbar-toggle:focus {
  background-color: transparent;
  border-color: #fff;
  font-weight: 900;
}
.icon-bar {
  background-color: #fff;
}
.navbar-default .navbar-toggle:hover>.icon-bar {
  background-color: #383838;
  font-weight: 900;
}
/* Home Style */

#donate {
  background-color: #fff;
  padding-top: 40px;
  padding-bottom: 40px;
  margin-top: 40px;
  margin-bottom: 40px;
}

header p {

  font-size: 18px;
  text-transform: none;
  margin-bottom: 60px;
  letter-spacing: 2px;
}
.intro-text {
  font-weight: 500;
  position: relative;
  padding-top: 60px;
  padding-right: 0;
  padding-left: 0;
  padding-bottom: 400px;
}
.intro-text h1 {
  font-size: 40px;
  text-transform: none;
  color: #fff;
  font-weight: 900;
}
.intro-text .brand {
  font-weight: 700;
}

.app-store-link {
  margin: 40px 25px;
}
/* About Section */
#about-section, #about-littlestem-books {
  padding: 20px 0;
  background: #fff;
}
#about-section .color, #about-littlestem-books .color {
  color: #ed3e44;
}
#about-section p, #about-littlestem-books p {
  margin-top: 20px;
  margin-bottom: 30px;
  padding-left: 20px;
}

.section-title.center {
  padding: 15px 0;
}
.section-title h2, .section-title.center h2 {
  font-size: 28px;
  font-weight: 700;
  margin-bottom: 10px;
  text-transform: none;
}

.section-title hr {
  height: 3px;
  width: 60px;
  background: #ed3e44;
  position: relative;
  border: 0;
  margin-top: 40px;
  margin-bottom: 40px;
}

#works-section {
  padding: 100px 0 0 0;
}

ul.cat li {
  display: inline-block;
}
ol.type li {
  display: inline-block;
  margin-left: 20px;
}
ol.type li a {
  color: #383838;
  padding: 4px 8px;
  text-transform: none;
}
ol.type li a.active {
  color: #ffffff;
  background: #ed3e44;
}
ol.type li a:hover {
  color: #ffffff;
  background: #ed3e44;
}

.moon-page-margin {
  margin-top: 30px;
}
.isotope-item {
  z-index: 2
}
.isotope-hidden.isotope-item {
  z-index: 1
}
.isotope, .isotope .isotope-item {
  /* change duration value to whatever you like */
  -webkit-transition-duration: 0.8s;
  -moz-transition-duration: 0.8s;
  transition-duration: 0.8s;
}
.isotope-item {
  margin-right: -1px;
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
}
.isotope {
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
  -webkit-transition-property: height, width;
  -moz-transition-property: height, width;
  transition-property: height, width;
}
.isotope .isotope-item {
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
  -webkit-transition-property: -webkit-transform, opacity;
  -moz-transition-property: -moz-transform, opacity;
  transition-property: transform, opacity;
}
.portfolio-item {
  margin-bottom: 30px;
}
.portfolio-item .hover-bg {
  max-height: 300px;
  overflow: hidden;
  position: relative;
}
.hover-bg .hover-text {
  position: absolute;
  text-align: center;
  margin: 0 auto;
  color: #fff;
  background: rgba(245, 152, 152, 0.9);
  padding: 25% 0;
  height: 120%;
  width: 120%;
  opacity: 0;
  transition: all 0.5s;
}
.hover-bg .hover-text p {
  color: #fff;
  font-size: 16px;
  font-weight: 900;
}
.hover-bg .hover-text>h4 {
  opacity: 0;
  -webkit-transform: translateY(100%);
  transform: translateY(100%);
  transition: all 0.3s;
  color: #fff;
  font-size: 24px;
  font-weight: 900;
}
.hover-bg:hover .hover-text>h4 {
  opacity: 1;
  -webkit-backface-visibility: hidden;
  -webkit-transform: translateY(0);
  transform: translateY(0);
}
.hover-bg:hover .hover-text {
  opacity: 1;
}

/* about-littlestem-books-section*/

#about-littlestem-books-section {
  margin-top: 50px;
}
/* Testimonials Section */
#testimonials-section {
  padding: 100px 0 60px 0;
  background-image: url("<%= asset_path('testimonials-bg.jpg') %>");
  background-size: cover;
  background-attachment: fixed;
}

#testimonials-section i.fa {
  color: #8e9599;
  font-size: 36px;
}

#testimonial {
  padding: 30px 0;
}
#testimonial .item {
  display: block;
  width: 100%;
  height: auto;
}
#testimonial img {
  width: 140px;
  height: 140px;
}
#testimonial .item p {
  font-weight: 400;
  margin: 30px 0;
  color: #444;
}



a:focus {
  outline: none;
  outline-offset: none;
}

#iTunes {
  padding: 35px 0;
}

/* Social Section */
#social-section {
  padding: 35px 0 25px 0;
  background-color: #e6e6e6;
  text-align: center;
}
#social-section .social ul li {
  display: inline-block;
  margin: 0 30px;
}
#social-section .social i.fa {
  color: #ed3e44;
  font-size: 26px;
  padding: 8px 0;
  width: 40px;
  height: 40px;
  transition: all 0.5s;
}
#social-section .social i.fa:hover {
  color: #fff;
  background: #ed3e44;
}
/* Footer */
#footer {
  background: #f6f6f6;
  padding: 15px 0 10px 0;
}
#footer p {
  font-size: 13px;
  margin-top: 10px;
  color: #888;
}

@media (max-width: 768px) {
.content {
  padding: 40% 0 0;
}
#menu.navbar-default {
  background-color: rgba(0, 0, 0, 0.3);
}
}

@media (max-width: 603px) {
label {
  float: none !important
}
.hover-bg .hover-text {
  padding: 12% 0;
}
}

@media (max-width: 360px) {
  .hover-bg .hover-text {
    padding: 22% 10%;
  }
}